{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center">SPACEGAME</h1>
    <p class="soustexte d-flex justify-content-center">Site fait par Aurelie, Elodie, Karim et Aleandre. Incroyablement beau et fort, on a tous fait ! Prend aussi nos jeux !</p>

    <h2 class="d-flex justify-content-left">CHOISI TON JEUX !</h2>
    
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Quantite</th>
                <th>Category</th>
                <th>Date_de_sortie</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.category }}</td>
                <td>{{ produit.dateDeSortie ? produit.dateDeSortie|date('Y-m-d') : '' }}</td>
                <td> <img class="image-produit" src="{{asset('images/' ~ produit.image)}}" /> </td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
